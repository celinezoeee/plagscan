<MainView>:
    orientation: 'vertical'

    GridLayout:
        cols: 2
        FileChooserListView:
            id: filechooser_1
            canvas.before:
                Color:
                    rgb: 0, 0, 0  # Schwarzer Hintergrund
            on_selection: root.select(filechooser_1, args[0], args[1])

        FileChooserListView:
            id: filechooser_2
            canvas.before:
                Color:
                    rgb: 0, 0, 0  # Schwarzer Hintergrund
            on_selection: root.select(filechooser_2, args[0], args[1])

    GridLayout:
        cols: 2
        ScrollView:
            Label:
                id: label_container_1
                size_hint_y: None
                height: '30dp'
                text: 'Selected File 1 Content:'
                canvas.before:
                    Color:
                        rgb: 0, 0, 0  # Schwarzer Hintergrund
                    Rectangle:
                        pos: self.pos
                        size: self.size
                text_size: self.width, None
                height: self.texture_size[1]

        ScrollView:
            Label:
                id: label_container_2
                size_hint_y: None
                height: '30dp'
                text: 'Selected File 2 Content:'
                canvas.before:
                    Color:
                        rgb: 0, 0, 0  # Schwarzer Hintergrund
                    Rectangle:
                        pos: self.pos
                        size: self.size
                text_size: self.width, None
                height: self.texture_size[1]
